    <script>
        // Funzione per controllare le risposte
        function checkAnswers() {
            const answers = {
                q1: ["sta per iniziare", "Ã¨ sul punto di iniziare"],
                q2: ["sto lavorando"],
                q3: ["mi sono messo a guardare", "ho cominciato a guardare", "ho iniziato a guardare"],
                q4: ["smetti di fare", "finisci di fare"],
                q5: ["provo a chiamare", "cerco di chiamare"],
                q6: ["stavo per uscire", "ero sul punto di uscire"],
                q7: ["continuo a imparare", "provo a imparare", "cerco di imparare"],
                q8: ["finito di scrivere"],
                q9: ["sta per piovere"],
                q10: ["si Ã¨ messo a raccontare", "ha cominciato a raccontare"],
                q11: ["comincio a leggere", "inizio a leggere"],
                q12: ["continuano a camminare"],
                q13: ["si Ã¨ messo a piangere", "ha cominciato a piangere"],
                q14: ["continui a fare"],
                q15: ["provo a capire", "cerco di capire"],
                q16: ["sta per partire", "Ã¨ sul punto di partire"],
                q17: ["finito di mangiare"],
                q18: ["proviamo a studiare"],
                q19: ["stava parlando"],
                q20: ["comincerÃ² a pulire", "inizierÃ² a pulire", "mi metterÃ² a pulire"]
            };

            let correctCount = 0;
            const totalQuestions = Object.keys(answers).length;

            for (let i = 1; i <= totalQuestions; i++) {
                const questionId = 'q' + i;
                const inputElement = document.getElementById(questionId);
                const userAnswer = inputElement.value.trim().toLowerCase();
                const possibleAnswers = answers[questionId];

                // Rimuovi le classi precedenti
                inputElement.classList.remove('correct-answer', 'incorrect-answer');

                if (possibleAnswers.includes(userAnswer)) {
                    inputElement.classList.add('correct-answer');
                    correctCount++;
                } else {
                    inputElement.classList.add('incorrect-answer');
                }
            }

            const resultsDiv = document.getElementById('results');
            resultsDiv.textContent = `Hai risposto correttamente a ${correctCount} domande su ${totalQuestions}.`;
            if (correctCount === totalQuestions) {
                resultsDiv.style.color = '#22c55e'; // green-500
            } else {
                resultsDiv.style.color = '#ef4444'; // red-500
            }
        }
    </script>

